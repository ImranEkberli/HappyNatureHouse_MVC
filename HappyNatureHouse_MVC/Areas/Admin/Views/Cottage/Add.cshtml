@{
    ViewData["Title"] = "Add";
}
@model AdminViewModel.CottageAddViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kotec əlavə olunması</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>
        <form asp-area="Admin" asp-controller="Cottage" asp-action="Add" method="post" enctype="multipart/form-data" asp-antiforgery="true">
            <div class="row mb-3">
                <label asp-for="Name" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Title" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Description" class="form-control">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Price" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Price" class="form-control">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="DiscountPrice" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="DiscountPrice" class="form-control">
                    <span class="text-danger" asp-validation-for="DiscountPrice"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Image" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Image" class="form-control">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="RoomCount" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="RoomCount" class="form-control">
                    <span class="text-danger" asp-validation-for="RoomCount"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="GuestCount" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="GuestCount" class="form-control">
                    <span class="text-danger" asp-validation-for="GuestCount"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="SingleBed" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="SingleBed" class="form-control">
                    <span class="text-danger" asp-validation-for="SingleBed"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="DoubleBed" class="col-md-3 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="DoubleBed" class="form-control">
                    <span class="text-danger" asp-validation-for="DoubleBed"></span>
                </div>
            </div>
            <div class="row mb-3">            
                <div class="col-md-8">
                    <input asp-for="Status" class="form-control">
                    <label asp-for="Status" class="col-md-3 col-form-label"></label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-8 offset-md-3">
                    <button type="submit" class="btn btn-primary">Əlavə et</button>
                </div>
            </div>
        </form>
    </div>
</div>

































